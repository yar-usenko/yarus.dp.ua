{
  "version": "independent",
  "packages": [
    "api/*",
    "frontend/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "run": {
      "stream": true,
      "parallel": true
    },
    "exec": {
      "stream": true,
      "parallel": true
    },
    "version": {
      "allowBranch": "master"
    }
  }
}
